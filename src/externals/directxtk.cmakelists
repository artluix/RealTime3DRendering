# PTODO: Add headers here because IDE can't recognize them
add_library(directxtk OBJECT
    ${DIRECTXTK_FILES}
)

target_include_directories(directxtk
    PUBLIC 
        $<BUILD_INTERFACE:${CMAKE_CURRENT_SOURCE_DIR}/Inc>
    PRIVATE
        Inc
        Src
)

target_compile_options(directxtk
    PRIVATE
        /Wall
        /fp:fast
        /Oi
        # /RTC1
        /arch:SSE2
        /EHsc
        /Yupch.h
        /GS
        /Zc:inline
        /Zc:wchar_t
        /Zc:forScope
        # /permissive-
        # debug
        $<$<CONFIG:DEBUG>:/Od /MDd /ZI /Gm>
        # release
        $<$<CONFIG:RELEASE>:/O2 /MD /Gy /Zi /Gm->
)

target_compile_definitions(directxtk
    PUBLIC
        -DUNICODE
        -D_UNICODE
        -D_WIN32_WINNT=0x0600
        -D_WIN7_PLATFORM_UPDATE
        -DWIN32
)

set_source_files_properties(Src/pch.cpp PROPERTIES COMPILE_FLAGS /Ycpch.h)

# ide filters
source_group(TREE ${CMAKE_CURRENT_SOURCE_DIR} FILES ${DIRECTXTK_FILES})

if(XTK_TOOLS)
    add_executable(xwbtool XWBtool/xwbtool.cpp)
    install(TARGETS xwbtool DESTINATION tools)
endif()

